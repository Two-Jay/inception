FROM debian:buster

RUN apt-get update -y && apt-get upgrade -y \
    && apt-get install -y \
        php7.3 \
        php-mysql \
        php-fpm \
        mariadb-client \
        wget \
        tar

# EXPOSE 3306 9000

RUN wget https://ko.wordpress.org/latest-ko_KR.zip
RUN tar -xzvf latest-ko_KR.zip

COPY ./config/setup.sh /tmp/setup.sh

CMD ["sh", "/tmp/setup.sh"]
ENTRYPOINT ["php-fpm7.3", "-F"]