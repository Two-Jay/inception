FROM debian:buster

RUN apt-get update -y && apt-get upgrade -y \
    && apt-get install -y \
        php7.3 \
        php-mysql \
        php-fpm \
        mariadb-client \
        wget \
        unzip

# EXPOSE 3306 9000

RUN wget https://ko.wordpress.org/latest-ko_KR.zip
RUN unzip -o latest-ko_KR.zip -d /var/www/
RUN chown -R www-data:www-data /var/www/wordpress

RUN rm -rf /var/www/wordpress/wp-config-sample.php
COPY ./config/wp-config.php /var/www/wordpress/
COPY ./config/www.conf /etc/php/7.3/fpm/pool.d/
RUN mkdir -p /run/php

ENTRYPOINT ["php-fpm7.3", "-F", "-R"]